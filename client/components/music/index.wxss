.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.classic-img{
width: 422rpx;
height: 422rpx;
margin-top: 60rpx;
border-radius: 50%;
}
.tag {
  width: 46rpx;
  height: 128rpx;
  position: relative;
  right: 310rpx;
  bottom: 160rpx;
}
.player-img{
  width: 120rpx;
  height: 120rpx;
  position: relative;
  bottom: 270rpx;
}
.content {
  font-size: 32rpx;
  max-width: 550rpx;
}
.rotation {
  -webkit-transform: rotate(360deg);
  animation: rotation 12s linear infinite;
  -moz-animation: rotation 12s linear infinite;
  -webkit-animation: rotation 12s linear infinite;
  -o-animation: rotation 12s linear infinite;
}
@keyframes rotation {
  from {
    -webkit-transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(360deg);
  }
}
