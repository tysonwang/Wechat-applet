<view class="container">
  <image src="/public/images/my/my@bg.png" class="bg"></image>
  <v-imgbtn wx:if="{{!hasUserInfo}}" open-type="getUserInfo" class="avatar-position" bind:getuserinfo="onGetUserInfo">
     <image slot="img" class="avatar" src="/public/images/my/my.png" /> 
  </v-imgbtn>
  <view class="avatar-container avatar-position">
    <image src="{{userInfo.avatarUrl}}" wx:if="{{hasUserInfo}}" class="avatar" />
    <open-data wx:if="{{hasUserInfo}}" type="userNickName"></open-data>
  </view>
  <!-- <open-data type='userAvatarUrl'></open-data> 用户头像 -->
  <view class="about-container">
    <view bind:tap="onJumpToAbout" class="about-us">
      <image src="/public/images/my/about.png" />
      <text class="description">关于我们</text>
    </view>
    <view class="about-us">
      <text class="book-num">{{myBooksCount}}</text>
      <text class="description">喜欢的书</text>
    </view>
  </view>
  <view class="like-container">
    <image class=".headline" src="/public/images/my/like.png" />
    <view class="preview-container">
      <block wx:for="{{classics}}">
        <v-preview bind:tap="onPreviewTap" class="preview" classic="{{item}}" />
      </block>
    </view>
  </view>
</view>

<image bind:tap="onStudy" class="study" src="/public/images/my/study.png"></image>